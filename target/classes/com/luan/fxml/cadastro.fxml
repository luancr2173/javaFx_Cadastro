<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.luan.controller.CadastroController">
    
    <center>
        <VBox spacing="15" style="-fx-padding: 30;" alignment="CENTER">
            
            <Label text="Cadastro de Usuário" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            
            <!-- Campo Nome -->
            <VBox spacing="5">
                <Label text="Nome:" style="-fx-font-size: 12;"/>
                <TextField fx:id="nomeField" promptText="Digite seu nome"/>
            </VBox>
            
            <!-- Campo Email -->
            <VBox spacing="5">
                <Label text="Email:" style="-fx-font-size: 12;"/>
                <TextField fx:id="emailField" promptText="Digite seu email"/>
            </VBox>
            
            <!-- Campo Telefone -->
            <VBox spacing="5">
                <Label text="Telefone:" style="-fx-font-size: 12;"/>
                <TextField fx:id="telefoneField" promptText="Digite seu telefone"/>
            </VBox>
            
            <!-- Botões -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="salvarButton" text="Salvar" 
                        onAction="#salvar" style="-fx-padding: 10; -fx-font-size: 12;"/>
                <Button fx:id="limparButton" text="Limpar" 
                        onAction="#limpar" style="-fx-padding: 10; -fx-font-size: 12;"/>
            </HBox>
            
            <!-- Mensagem de Resultado -->
            <Label fx:id="mensagemLabel" text="" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            
        </VBox>
    </center>
    
</BorderPane>
